@model IEnumerable<Photography_Blog.ViewModels.ApplicationUserViewModel>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="table-form">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <h1>ყველა იუზერი</h1>
            <a asp-action="Register" class="btn btn-warning">ახლის შექმნა</a>
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped" id="table1">
                        <thead>
                            <tr>
                                <th>
                                    სახელი
                                </th>
                                <th>
                                    გვარი
                                </th>
                                <th>
                                    ნიკი
                                </th>
                                <th>
                                    ტელეფონი
                                </th>
                                <th>
                                    მეილი
                                </th>
                                <th>
                                    მისამართი
                                </th>
                                <th>
                                    სურათი
                                </th>
                                <th>
                                    თარიღი
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NickName)
                                    </td>
                                    <td>
                                        444444
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @* @Html.DisplayFor(modelItem => item.ImageName) *@
                                        <img src="~/Images/Photographer/@item.ImageName" class="rounded-circle" style="width: 100px; height: 100px;" asp-append-version="true" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedateTime)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</section>