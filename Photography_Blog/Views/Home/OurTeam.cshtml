@model List<Photographer>

@{
    ViewData["Title"] = "OurTeam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="welcome-area">
    <div class="welcome-slides owl-carousel">
        @foreach (var item in ViewBag.cover)
        {
            <div class="single-welcome-slide bg-img bg-overlay" style="background-image: url('@Url.Content("~/Images/Photographer/" + item.PageImageName)');">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12 col-lg-8 col-xl-6">
                            <div class="welcome-text">
                                <h2 data-animation="bounceInDown" data-delay="400ms">გამარჯობა!</h2>
                                <h2 data-animation="bounceInDown" data-delay="800ms"><br>მე, ვარ @item.NickName</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</section>

@for (int i = 0; i < Model.Count(); i++)
{
    if (i % 2 == 0)
    {
        <div class="about-us-area section-padding-80-0 clearfix">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 col-lg-6">
                        <div class="about-video-area mb-80 wow fadeInUp" data-wow-delay="100ms">
                            <img src="~/Images/Photographer/@Model[i].PageImageName" alt="">
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="about-us-content mb-80">
                            <h3 class="wow fadeInUp" data-wow-delay="100ms">@Model[i].NickName</h3>
                            <div class="line wow fadeInUp" data-wow-delay="200ms">
                            </div>
                            <div class="row col-12 col-lg-6">

                                <h6 class="font-weight-medium">სახელი: &nbsp; </h6>
                                <span class="font-weight-medium"> @Model[i].FirstName</span>
                            </div>
                            <div class="row col-12 col-lg-6">

                                <h6 class="font-weight-medium">გვარი: &nbsp; </h6>
                                <span class="font-weight-medium"> @Model[i].LastName</span>
                            </div>
                            <div class="row col-12 col-lg-6">

                                <h6 class="font-weight-medium">ასაკი: &nbsp; </h6>
                                <span class="font-weight-medium"> @Model[i].Age წლის</span>
                            </div>

                            <p class="wow fadeInUp" data-wow-delay="300ms">@Model[i].ShortBio</p>
                            <p class="wow fadeInUp" data-wow-delay="400ms">@Model[i].Experience</p>
                            <a class="btn alime-btn btn-2 mt-30 wow fadeInUp" data-wow-delay="500ms" href="@Url.Action("Photographer", "Home", new { id = Model[0].Id })">ნაშრომის დათვალიერება</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="about-us-area section-padding-80-0 clearfix">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 col-lg-6">
                        <div class="about-us-content mb-80">
                            <h3 class="wow fadeInUp" data-wow-delay="100ms">@Model[i].NickName</h3>
                            <div class="line wow fadeInUp" data-wow-delay="200ms">
                            </div>

                            <div class="row col-12 col-lg-6">
                                <h6 class="font-weight-medium">სახელი: &nbsp; </h6>
                                <span class="font-weight-medium"> @Model[i].FirstName</span>
                            </div>
                            <div class="row col-12 col-lg-6">
                                <h6 class="font-weight-medium">გვარი: &nbsp; </h6>
                                <span class="font-weight-medium"> @Model[i].LastName</span>
                            </div>
                            <div class="row col-12 col-lg-6">
                                <h6 class="font-weight-medium">ასაკი: &nbsp; </h6>
                                <span class="font-weight-medium"> @Model[i].Age წლის</span>
                            </div>
                            <p class="wow fadeInUp" data-wow-delay="300ms">@Model[i].ShortBio</p>
                            <p class="wow fadeInUp" data-wow-delay="400ms">@Model[i].Experience</p>
                            <a class="btn alime-btn btn-2 mt-30 wow fadeInUp" data-wow-delay="500ms" href="@("Photographer\\"+Model[i].Id)">ნაშრომის დათვალიერება</a>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="about-video-area mb-80 wow fadeInUp" data-wow-delay="100ms">
                            <img src="~/Images/Photographer/@Model[i].PageImageName" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

<section>
    <div class="follow-area clearfix">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading text-center">
                        <h2>გამოგვყევით ინსტაგრამზე</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="instragram-feed-area owl-carousel">
            @foreach (var item in ViewBag.cateimage)
            {
                <div class="single-instagram-item">
                    <img src="~/images/pageimages/OurTeamInstagram/@item.ImageName" alt="" style="width: 317px; height: 317px;">
                    <div class="instagram-hover-content text-center d-flex align-items-center justify-content-center">
                        <a href="@ViewBag.ContactInfo.Instagram">
                            <i class="ti-instagram" aria-hidden="true"></i>
                            <span>@item.Title</span>
                        </a>
                    </div>
                </div>
            }

        </div>
</section>