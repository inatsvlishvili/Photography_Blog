@model IEnumerable<Photography_Blog.ViewModels.MainPageTextViewModel>

@{
    ViewData["Title"] = "MainPageText";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="table-form">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <h1>ყველა სურათი</h1>
            <a asp-action="AddMainPageText" class="btn btn-warning">ახლის შექმნა</a>
            <div class="card">
                <div class="card-body">
                    <table class="table table-lg">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text3)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageName1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageName2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VideoUrl1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VideoUrl2)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text3)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImageName1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImageName2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VideoUrl1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VideoUrl2)
                                    </td>
                                    <td>
                                        <a asp-action="EditMainPageText" asp-route-id="@item.Id" class="btn btn-success">შესწორება</a>
                                        <a asp-action="DeleteMainPageText" asp-route-id="@item.Id" class="btn btn-danger">წაშლა</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>