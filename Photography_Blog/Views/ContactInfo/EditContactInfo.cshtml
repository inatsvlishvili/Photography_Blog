@model Photography_Blog.ViewModels.ContactInfoViewModel

@{
    ViewData["Title"] = "EditContactInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-md-4">
        <h1>საკონტაქტო ინფორმაციის რედაქტირება</h1>
                <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="EditContactInfo" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Title" class="control-label">სახელი</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label">მისამართი</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label">ტელეფონი</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">მეილი</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Map" class="control-label">რუკა</label>
                                <input asp-for="Map" class="form-control" />
                                <span asp-validation-for="Map" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Facebook" class="control-label">ფეისბუქი</label>
                                <input asp-for="Facebook" class="form-control" />
                                <span asp-validation-for="Facebook" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Instagram" class="control-label">ინსტაგრამი</label>
                                <input asp-for="Instagram" class="form-control" />
                                <span asp-validation-for="Instagram" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tiktok" class="control-label">ტიკტოკი</label>
                                <input asp-for="Tiktok" class="form-control" />
                                <span asp-validation-for="Tiktok" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Youtube" class="control-label">იუთუბი</label>
                                <input asp-for="Youtube" class="form-control" />
                                <span asp-validation-for="Youtube" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Twitter" class="control-label">ტვიტერი</label>
                                <input asp-for="Twitter" class="form-control" />
                                <span asp-validation-for="Twitter" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Linkedin" class="control-label">ლინკედინი</label>
                                <input asp-for="Linkedin" class="form-control" />
                                <span asp-validation-for="Linkedin" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="შენახვა" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a href="javascript:history.back()">უკან დაბრუნება</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
