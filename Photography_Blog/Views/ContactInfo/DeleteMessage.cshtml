@model Photography_Blog.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "DeleteMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="table-form">
    <div class="row justify-content-center">
        <div class="col-12 col-md-4">
            <h1>შეტყობინების წაშლა</h1>
            <div class="card">
                <div class="card-header">
                    <h3>ნამდვილად გსურთ ამ შეტყობინების წაშლა?</h3>
                    <div>
                        <dl class="row">
                            <dt class="col-sm-2">
                                სახელი
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                ტელეფონი
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Phone)
                            </dd>
                            <dt class="col-sm-2">
                                მეილი
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class="col-sm-2">
                                სათაური
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Subject)
                            </dd>
                            <dt class="col-sm-2">
                                ტექსტი
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CommentTXT)
                            </dd>
                            <dt class="col-sm-2">
                                თარიღი
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CreatedateTime)
                            </dd>
                        </dl>

                        <form asp-action="DeleteMessage">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="წაშლა" class="btn btn-danger" />
                            <div>
                                <a href="javascript:history.back()">უკან დაბრუნება</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>