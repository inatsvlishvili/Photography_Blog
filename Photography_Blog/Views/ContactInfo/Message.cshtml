@model IEnumerable<Photography_Blog.ViewModels.ContactViewModel>

@{
    ViewData["Title"] = "Message";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="table-form">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <h1>ყველა შეტყობინება</h1>
            <div class="card">
                <div class="card-body">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>
                                    სახელი
                                </th>
                                <th>
                                    ტელეფონი
                                </th>
                                <th>
                                    მეილი
                                </th>
                                <th>
                                    სათაური
                                </th>
                                <th>
                                    ტექსტი
                                </th>
                                <th>
                                    თარიღი
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Subject)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CommentTXT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedateTime)
                                    </td>
                                    <td>
                                        <a asp-action="EditMessage" asp-route-id="@item.Id" class="btn btn-success">შესწორება</a>
                                        <br />
                                        <a asp-action="DeleteMessage" asp-route-id="@item.Id" class="btn btn-danger">წაშლა</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</section>