@model Photography_Blog.ViewModels.AboutUsViewModel

@{
    ViewData["Title"] = "AddAboutUs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="table-form">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1>ფოტოგრაფის დამატება</h1>


            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="AddAboutUs" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Text1" class="control-label">ტექსტ1</label>
                                    <textarea id="Text1" class="form-control" name="Text1" rows="8"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Text2" class="control-label">ტექსტ2</label>
                                    <textarea id="Text2" class="form-control" name="Text2" rows="8"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Text3" class="control-label">ტექსტ3</label>
                                    <textarea id="Text3" class="form-control" name="Text3" rows="8"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Text4" class="control-label">ტექსტ4</label>
                                    <textarea id="Text4" class="form-control" name="Text4" rows="8"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Text5" class="control-label">ტექსტ5</label>
                                    <textarea id="Text5" class="form-control" name="Text5" rows="8"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Text6" class="control-label">ტექსტ6</label>
                                    <textarea id="Text6" class="form-control" name="Text6" rows="8"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Text7" class="control-label">ტექსტ7</label>
                                    <textarea id="Text7" class="form-control" name="Text7" rows="8"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="BlockquoteText" class="control-label">ქვეტექსტი</label>
                                    <textarea id="BlockquoteText" class="form-control" name="BlockquoteText" rows="8"></textarea>
                                </div>

                                <div class="form-group">
                                    <label asp-for="BlockquoteTitle" class="control-label">ქვეტექსტის სათაური</label>
                                    <input asp-for="BlockquoteTitle" class="form-control" />
                                    <span asp-validation-for="BlockquoteTitle" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="დამატება" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                    <div>
                        <a href="javascript:history.back()">უკან დაბრუნება</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}