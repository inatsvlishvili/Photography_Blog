@model Photography_Blog.ViewModels.ServiceViewModel

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section id="table-form">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>სერვისის დამატება</h1>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="AddService" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Title" class="control-label">სახელი</label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Package" class="control-label">პაკეტი</label>
                                    <input asp-for="Package" class="form-control" />
                                    <span asp-validation-for="Package" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label">ფასი</label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">აღწერა</label>
                                    <textarea id="Description" class="form-control" name="Description" rows="10"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ImageName" class="control-label">აირჩიეთ სურათი</label>
                                    <input class="form-control" type="file" name="ImageFile" placeholder="Rounded Input" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="დამატება" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a href="javascript:history.back()">უკან დაბრუნება</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}