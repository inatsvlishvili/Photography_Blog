@model IEnumerable<Photography_Blog.ViewModels.ServiceViewModel>

@{
    ViewData["Title"] = "Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="table-form">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <h1>სერვისი</h1>
            <a asp-action="AddService" class="btn btn-warning">ახლის შექმნა</a>
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped" id="table1">
                        <thead>
                            <tr>
                                <th>
                                    სახელი
                                </th>
                                <th>
                                    პაკეტი
                                </th>
                                <th>
                                    ფასი
                                </th>
                                <th>
                                    აღწერა
                                </th>
                                <th>
                                    სურათი
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Package)
                                    </td>
                                    
                                    <td>
                                        @Html.Raw(item.Description.Replace(Environment.NewLine, "<br>"))
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                   
                                        <img src="~/images/Service/@item.ImageName" class="rounded-Corners" style="width: 100px; height: 100px;" asp-append-version="true" />
                                   
                                    </td>
                                    <td>
                                        <a asp-action="EditService" asp-route-id="@item.Id" class="btn btn-success">შესწორება</a>
                                        <a asp-action="DeleteService" asp-route-id="@item.Id" class="btn btn-danger">წაშლა</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</section>