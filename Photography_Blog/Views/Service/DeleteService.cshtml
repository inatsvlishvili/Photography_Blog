@model Photography_Blog.ViewModels.ServiceViewModel

@{
    ViewData["Title"] = "DeleteService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="table-form">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>სერვისის წაშლა</h1>
            <div class="card">
                <div class="card-header">
                    <h3>ნამდვილად გსურთ ამ სერვისის წაშლა?</h3>
                    <div>
                        <dl class="row">
                            <dt class="col-sm-2">
                                სახელი
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Title)
                            </dd>
                            <dt class="col-sm-2">
                                პაკეტი
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Package)
                            </dd>
                            <dt class="col-sm-2">
                                ფასი
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Price)
                            </dd>
                            <dt class="col-sm-2">
                                აღწერა
                            </dt>
                            <dd class="col-sm-10">
                                @Html.Raw(Model.Description.Replace(Environment.NewLine, "<br>"))
                            </dd>
                            <dt class="col-sm-2">
                                სურათი
                            </dt>
                            <dd class="col-sm-10">
                                <img src="~/images/Service/@Model.ImageName" class="rounded-Corners" style="width: 100px; height: 100px;" asp-append-version="true" />
                            </dd>
                        </dl>

                        <form asp-action="DeleteService">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="წაშლა" class="btn btn-danger" />
                            <div>
                                <a href="javascript:history.back()">უკან დაბრუნება</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>